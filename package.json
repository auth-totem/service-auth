{
  "name": "auth-totem",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase": "^8.3.3",
    "morgan": "^1.10.0",
    "mysql2": "^2.2.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.37",
    "concurrently": "^6.0.1",
    "env-cmd": "^10.1.0",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "watch": "tsc -w",
    "watch:newpkg": "nodemon --watch package.json --exec \"npm install\"",
    "dev": "nodemon dist/index.js",
    "dev:watch": "concurrently --kill-others \"npm run watch\" \"npm run dev\"",
    "dev:docker": "concurrently --kill-others \"npm run watch:newpkg\" \"npm run dev:watch\"",
    "build:docker": "docker build -t miguel-panuto/auth-totem -f ./Dockerfile.dev ."
  }
}
